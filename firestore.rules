rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User documents - users can read/write their own, and read others in same organisation
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read other users in the same organisation (if organisationId exists)
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organisationId == resource.data.organisationId;
      
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Organisation documents - members can read, owner can write
    match /organisations/{organisationId} {
      allow read: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organisationId == organisationId);
      allow write: if request.auth != null && 
        (resource == null && request.auth.uid == request.resource.data.owner) ||
        (resource != null && request.auth.uid == resource.data.owner);
    }

    // Organizations collection (American spelling) - used for Stripe billing
    // Members can read their organization's billing data
    match /organizations/{organizationId} {
      allow read: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organisationId == organizationId);
      allow write: if false; // Only Cloud Functions (webhooks) can write
    }

    // Project documents - organisation members can read, owner can write
    match /projects/{projectId} {
      // Allow read operations (both list and get) for authenticated users in the same organisation
      allow read: if request.auth != null;
      
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.owner &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organisationId == request.resource.data.organisationId;
      
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.owner;
      
      // Subcollections (pages, runs, etc.) - allow read/write for authenticated users
      match /pages/{pageId} {
        allow read, write: if request.auth != null;
      }
      match /scans/{scanId} {
        allow read, write: if request.auth != null;
      }
      match /{subcollection}/{doc=**} {
        allow read, write: if request.auth != null;
      }
    }

    // Jobs collection - users can read their own jobs
    match /jobs/{jobId} {
      allow read, write: if request.auth != null;
    }

    // Pages collection (top-level) - authenticated users can read/write
    match /pages/{pageId} {
      allow read, write: if request.auth != null;
    }

    // Runs collection - authenticated users can read/write
    match /runs/{runId} {
      allow read, write: if request.auth != null;
    }

    // Reports collection - authenticated users can read/write
    match /reports/{reportId} {
      allow read, write: if request.auth != null;
    }

    // Schedules collection - org members can read/write their schedules
    match /schedules/{scheduleId} {
      allow read: if request.auth != null && (
        // Allow access to schedules created by the user
        resource.data.createdBy == request.auth.uid ||
        // Allow access to schedules within the user's organization
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organisationId == resource.data.organizationId)
      );

      allow create: if request.auth != null &&
        request.resource.data.createdBy == request.auth.uid &&
        (
          request.resource.data.organizationId == null ||
          (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organisationId == request.resource.data.organizationId)
        );

      allow update, delete: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organisationId == resource.data.organizationId)
      );
    }

    // Subscriptions collection - users can read/write their own subscription
    match /subscriptions/{userId} {
      // Allow users to read their own subscription
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to create/update their own subscription
      allow create, update: if request.auth != null && request.auth.uid == userId;
      
      // Only allow delete by the user themselves
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Payment history collection - users can read their own payment history
    match /paymentHistory/{paymentId} {
      // Allow users to read their own payment records
      allow read: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Only Cloud Functions can write payment history (webhooks)
      // In production, you'd use a service account for this
      allow write: if false;
    }

    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}